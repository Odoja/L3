<link rel="preload" as="image" href="./img/Main/Main5.jpg">
<div class="MainImageWrapper">
  <img src="./img/Main/Main5.jpg" alt="Kyoto" id="MainImage" class="rotation">
  <div id="MainImageText">
    <h2>Restaurant World</h2>
    <p>Welcome to Restaurant World! The place where you can explore the culinary delights in Kalmar!</p>
    <div class="search-container">
      <input type="text" placeholder="Search for restaurants..." class="search-input">
    </div>
  </div>
</div>

<section id="MainPageSection" class="SectionStyle">

  <section id="RestaurantTypeSection">
    <h2 id="TypesHeader">Types of Kitchens:</h2>
    <div id="RestaurantTypes">
      <div class="RestaurantTypeBox"><img class="emblem" src="./img/emblems/Restaurang.png" alt="icon" data-pref="All">
        <p class="emblem-text">Restaurants</p>
      </div>
      <div class="RestaurantTypeBox"><img class="emblem" src="./img/emblems/Svensk.png" alt="icon" data-pref="Swedish">
        <p class="emblem-text">Swedish</p>
      </div>
      <div class="RestaurantTypeBox"><img class="emblem" src="./img/emblems/Italiensk.png" alt="icon" data-pref="Italian">
        <p class="emblem-text">Italian</p>
      </div>
      <div class="RestaurantTypeBox"><img class="emblem" src="./img/emblems/Thai.png" alt="icon" data-pref="Thai">
        <p class="emblem-text">Thai</p>
      </div>
      <div class="RestaurantTypeBox"><img class="emblem" src="./img/emblems/Turkisk.png" alt="icon" data-pref="Turkish">
        <p class="emblem-text">Turkish</p>
      </div>
      <div class="RestaurantTypeBox"><img class="emblem" src="./img/emblems/Japansk.png" alt="icon" data-pref="Japanese">
        <p class="emblem-text">Japanese</p>
      </div>
      <div class="RestaurantTypeBox"><img class="emblem" src="./img/emblems/Amerikansk.png" alt="icon" data-pref="American">
        <p class="emblem-text">American</p>
      </div>
      <div class="RestaurantTypeBox"><img class="emblem" src="./img/emblems/Kinesisk.png" alt="icon" data-pref="Chinese">
        <p class="emblem-text">Chinese</p>
      </div>
      <div class="RestaurantTypeBox"><img class="emblem" src="./img/emblems/Mexikansk.png" alt="icon" data-pref="Mexican">
        <p class="emblem-text">Mexican</p>
      </div>
      <div class="RestaurantTypeBox"><img class="emblem" src="./img/emblems/Vietnamesisk.png" alt="icon" data-pref="Vietnamese">
        <p class="emblem-text">Vietnamese</p>
      </div>
    </div>
  </section>
  <section id="SortingSection">
    <div class="SortingOptions">
      <button class="Sort-btn" data-pref="Top-Rated">Top Rated</button>
      <button class="Sort-btn" data-pref="Lowest-Rated">Lowest Rated</button>
      <button class="Sort-btn" data-pref="Highest-Price">Highest Price</button>
      <button class="Sort-btn" data-pref="Lowest-Price">Lowest Price</button>
    </div>
  </section>

  <section class="LightSection">
    <div class="RestaurantPictureSection">
      <div class="Cuisine-Header">
        <h2>All Restaurants</h2>
        <p class="Cuisine-Text"></p>
      </div>
      <div class="PictureRow">
        <% if (restaurantData && restaurantData.length> 0) { %>
          <% restaurantData.forEach(restaurant=> { %>
            <div class="PicWrapper">
              <a href="<%= baseURL %>restaurant/<%= restaurant.id %>" class="RestaurantPicBox" style="background-image: url('<%= restaurant.image %>')"></a>
              <div class="RestaurantPicDescription">
                <div class="info">
                  <h4 class="RestaurantName">
                    <%= restaurant.name %>
                    <span class="RestaurantPrice">
                        <%= restaurant.price %>
                      </span>
                    </h4>
                  <span class="RestaurantType">
                    <%= restaurant.type %>
                  </span>
                </div>
                <div class="RatingBox">
                  <span class="Rating">
                    <%= restaurant.averageRating %>‚≠ê
                  </span>
                  <span class="AmountOfRating">(<%= restaurant.reviews.length %>)</span>
                </div>
              </div>
            </div>
            <% }); %>
              <% } else { %>
                <p>No restaurants found.</p>
                <% } %>
      </div>
    </div>
  </section>

</section>