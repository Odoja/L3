<header id="GlobalHeader">
  <nav id="GlobalNav">
    <a href="/" id="BackButton">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
        <path d="M19 12H5M12 19l-7-7 7-7" />
      </svg>
      <span>Back to main page</span>
    </a>
    <h1>Restaurant World</h1>
  </nav>
</header>

<div class="RestaurantImageWrapper">
  <img src="<%= restaurantData.image %>" alt="<%= restaurantData.name %>" id="MainImage2" class="RestaurantImage">
</div>

<section id="MainPageSection" class="SectionStyle">
  <div id="RestaurantContainer">

    <div class="RestaurantTopSection">
      <div>
        <h1 class="RestaurantHeader">
          <%= restaurantData.name %>
            <span class="RestaurantType">
              <%= restaurantData.type %>
            </span>
        </h1>
      </div>
      <div class="RatingBox">
        <span class="Rating">
          <%= restaurantData.averageRating %>‚≠ê
        </span>
        <span class="AmountOfRating">(<%= restaurantData.reviews.length %> recensioner)</span>
      </div>
    </div>

    <hr class="Divider">

    <div id="Details">
      <h3 id="DetailsHeader">About The Restaurant</h3>
      <div id="RestaurantDetails">
        <div class="DetailsLeft">
          <p class="Description">
            <%= restaurantData.description %>
          </p>
        </div>
        <div class="DetailsRight">
          <p>Additional details<br>coming soon</p>
        </div>
      </div>
    </div>

    <div class="Reviews">
      <review-component></review-component>
    </div>

  </div>
</section>